@namespace FlammableComponents
@inherits FlammableComponentBase

<div class="alert toast-item @ToastInstance.ToastTypeClass">
    <button type="button" class="close" @onclick=@ToastCloseAsync>
        <span>&times;</span>
    </button>
    <h4 class="alert-heading">@ToastInstance.Header</h4>
    <hr>
    <p class="mb-0">@ToastInstance.Message</p>
</div>